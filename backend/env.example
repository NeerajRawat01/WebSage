# Backend environment example for WebSage (FastAPI)

# Shared secret used by frontend to authenticate to backend (Bearer token)
API_SECRET_KEY=

# Database connection (PostgreSQL)
# e.g. postgresql://user:pass@host:5432/dbname
DATABASE_URL=

# Rate limiting store
# For Docker Compose this defaults to redis://redis:6379/0
REDIS_URL=redis://redis:6379/0

# Scraper configuration
SCRAPER_TIMEOUT_SECONDS=15
SCRAPER_MAX_REDIRECTS=5
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/126.0 Safari/537.36
ALLOWED_SCHEMES=https,http
DISALLOW_PRIVATE_IPS=true

# JS rendering fallback (Playwright). Keep off in most deployments.
PLAYWRIGHT_ENABLED=false
PLAYWRIGHT_TIMEOUT_SECONDS=15

# AI configuration
# Choose one provider: openai or gemini
AI_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Google Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-pro
